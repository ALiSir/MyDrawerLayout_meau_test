<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context="com.alisir.mydrawerlayout_meau_test.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="菜单栏"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <fragment
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:name="com.alisir.mydrawerlayout_meau_test.RightFragment"
        android:id="@+id/rightfragment"
        android:layout_gravity="right"
        android:tag="RIGHT"
     />

    <fragment
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:name="com.alisir.mydrawerlayout_meau_test.LiftFragment"
        android:id="@+id/liftfragment"
        android:layout_gravity="left"
        android:tag="LEFT"
         />
</android.support.v4.widget.DrawerLayout>
